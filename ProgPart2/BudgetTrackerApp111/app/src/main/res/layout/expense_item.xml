<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/card_background"
    android:layout_marginBottom="12dp"
    android:elevation="2dp">

    <!-- Expense Image -->
    <ImageView
        android:id="@+id/expense_photo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:background="@drawable/image_rounded_background"
        android:contentDescription="Expense Photo"
        android:src="@drawable/placeholder_image" />

    <!-- Expense Details -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/expense_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â˜• Coffee with friend"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary" />

        <TextView
            android:id="@+id/expense_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cafe - Mocha Latte"
            android:textSize="14sp"
            android:textColor="@color/textSecondary"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/expense_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$5.50"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/green"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/expense_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01 Apr 2025"
            android:textSize="12sp"
            android:textColor="@color/medium_gray"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</LinearLayout>
