<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    android:paddingVertical="32dp"
    tools:context=".DashboardActivity">

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, User"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button: Manage Categories -->
    <Button
        android:id="@+id/manage_categories_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create Categories"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/welcome_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button: Set Goals -->
    <Button
        android:id="@+id/set_goals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Set Goals"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/manage_categories_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button: Create Expense -->
    <Button
        android:id="@+id/create_expense_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create Expense"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/set_goals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button: View Expenses -->
    <Button
        android:id="@+id/view_expenses_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Expenses"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/create_expense_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button: View by Category -->
    <Button
        android:id="@+id/view_by_category_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View by Category"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/view_expenses_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
